<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="App\Entity\UserContact">
        <field name="phone" type="string" length="20" nullable="true"/>
        <field name="email" type="string" length="180" nullable="true"/>
        <field name="vk" type="string" length="100" nullable="true"/>
        <field name="facebook" type="string" length="255" nullable="true"/>
    </embeddable>

</doctrine-mapping>
