<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="App\Entity\StructuralPart">
        <many-to-one field="university" target-entity="App\Entity\University">
            <join-column on-delete="SET NULL"/>
        </many-to-one>
        <many-to-one field="faculty" target-entity="App\Entity\UniversityFaculty">
            <join-column on-delete="SET NULL"/>
        </many-to-one>
        <many-to-one field="cafedra" target-entity="App\Entity\UniversityCafedra">
            <join-column on-delete="SET NULL"/>
        </many-to-one>
    </embeddable>

</doctrine-mapping>
